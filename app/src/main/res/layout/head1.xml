<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/par3"
            android:visibility="visible"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <android.support.v4.view.ViewPager
                android:id="@+id/viewPager_gridView"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="154dp"
                />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/cool_recycleView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </android.support.v7.widget.RecyclerView>

            <View
                android:layout_width="match_parent"
                android:layout_height="7dp"
                android:background="@color/line_color"></View>


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="120dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="热榜"
                        android:textColor="@color/black"
                        android:textSize="17sp"
                        android:padding="10dp"
                        android:drawableLeft="@drawable/vertical_line"
                        android:drawablePadding ="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />


                    <TextView
                        android:id="@+id/changeHotSearch"
                        android:text="换一换"
                        android:textColor="#FF5C5C"
                        android:layout_alignParentRight="true"
                        android:textSize="15sp"
                        android:padding="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RelativeLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/hot_search_recycleView"
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </android.support.v7.widget.RecyclerView>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="7dp"
                android:background="@color/line_color"></View>

        </LinearLayout>


        <RelativeLayout
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="热门资讯"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:padding="10dp"
                android:drawableLeft="@drawable/vertical_line"
                android:drawablePadding ="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <TextView
                android:id="@+id/moreNews"
                android:text="更多"
                android:textColor="#FF5C5C"
                android:layout_alignParentRight="true"
                android:textSize="15sp"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>


    </LinearLayout>

</LinearLayout>